<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.bottomnavigationactivityapp.ui.login.LogInFragment"
        android:label="@string/title_login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bottomnavigationactivityapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_liked_movies"
        android:name="com.example.bottomnavigationactivityapp.ui.likedmovies.LikedMoviesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_liked_movies" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.bottomnavigationactivityapp.ui.notifications.MatchesFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_matches" />
</navigation>